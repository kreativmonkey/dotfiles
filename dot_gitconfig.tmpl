[user]
	email = {{ .email }}
	name  = {{ .name }}

[includeIf "gitdir:~/git/gitlab.puzzle.ch"]
  path = ~/git/gitlab.puzzle.ch/.gitconfig

[includeIf "gitdir:~/git/github.com"]
  path = ~/git/github.com/.gitconfig

[includeIf "gitdir:~/git/git.f4mily.net"]
  path = ~/git/github.com/.gitconfig

[core]
	editor   = {{ .editor }}
	autocrlf = input
	pager    = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictstyle = diff3
	tool          = meld

[diff]
	colorMoved = default

[init]
	defaultBranch = main

[cola]
	spellcheck = false
